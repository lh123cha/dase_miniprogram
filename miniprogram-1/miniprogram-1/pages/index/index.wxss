/**index.wxss**/
page{
  background-color: #edece8;
  font-size: 30rpx;
}
/*导航栏*/
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding: 20rpx 65rpx;
  font-size:30rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom: 5rpx solid gray;
}
.news{
  padding:30rpx 30rpx 0rpx 30rpx;
}
.news-title{
  font-size:20px;
}

/* 新闻专栏 */
.pic-words{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  /* border: 1rpx solid yellowgreen; */
  background-color: #ffffff;
  padding: 20rpx;
}
.title-words{
  font-size: 35rpx;
}
/*发布时间+发布者*/
.create-time{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.publish{
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: gray;
  margin-top: 10rpx;
  width: 500rpx;
}
/*新闻专栏内的所有文字*/
.words{
  width: 450rpx;
}
/*新闻专栏内的图片封面*/
.cover{
  width: 220rpx;
  height: 150rpx;
}


/*轮播图*/
.swiper__container swiper-item{
  width: 100%;
  height: 100%;
}
.swiper__desc{
  position: absolute;
  width:100%;
  bottom: 0;
  padding: 10rpx;
  background-color: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.swiper__container{
  height: 13rem;
}
.swiper_item{
  display: block;
  width: 20rem;
  height: 13rem;
}

/* 今日党史 */
.daily_cover{
  width: 20rem;
  height: 6rem;
}

.daliy-pic-words{
  margin-top: -10rpx;
  display: flex;
  flex-direction: column;
  /* border: 1rpx solid yellowgreen; */
  /* background-color:#d6d6c1; */
  padding: 20rpx;
}

.cover{
  width: 220rpx;
  height: 150rpx;
}
.date{
  font-size: 40rpx;
  align-self: center;
}
.daliy-news-cover{
  align-self: center;
  width: 600rpx;
  height: 400rpx;
}
.events{
  align-self: center;
  margin-top: 10rpx;
}

.daliy-news-date{
  align-self: center;
  font-size: 35rpx;
}
.daily-events{
  margin-top: 30rpx;
}